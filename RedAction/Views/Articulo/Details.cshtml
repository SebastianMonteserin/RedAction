@model RedAction.Models.Articulo

@{
    ViewData["Title"] = "Ver Artículo";
}

<h1>Ver Artículo</h1>

<div>
    <h4>Articulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.autor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.autor.Dni)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.contenido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.contenido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.seccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.seccion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.observaciones)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.observaciones)
        </dd>
    </dl>
</div>
<div>
    @if ((User.IsInRole("REDACTOR")) && (Model.estado == EstadoArticulo.BORRADOR || Model.estado == EstadoArticulo.EN_REVISION) ||  (User.IsInRole("JDR")) && (Model.estado == EstadoArticulo.ESPERANDO_APROBACION))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    }

    
    @if (User.IsInRole("JDR"))
    {
        <a asp-action="Index">Volver a la lista de Artículos</a>
    }
    else
    {
        <a asp-area="" asp-controller="Articulo" asp-action="ArticulosPropios">Volver a Mis Artículos</a>
    }

</div>
